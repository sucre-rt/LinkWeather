<%= form_with model: current_user, url: profile_update_path, method: :patch, local: true do |f| %>
  <%= f.label :name, "名前" %>
  <%= f.text_field :name %>
  <%= f.label :my_area, "お住まい地域" %>
  <%= f.text_field :my_area %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.submit %>
<% end %>